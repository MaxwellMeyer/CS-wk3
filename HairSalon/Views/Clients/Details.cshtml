@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model HairSalon.Models.Client
<h2>Client Details:</h2>
<hr />
<h3>Name: @Html.DisplayFor(model => model.ClientName)</h3>
<h4>List of Stylists:</h4>
@foreach (Stylist stylist in Model.Stylist)
{
  <li>@Html.ActionLink($"{stylist.StylistName}", "Details", "Clients", new { id = stylist.StylistId })</li>
}
<hr />
<p>@Html.ActionLink("Edit Client", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Client", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to Client List", "Index")</p>